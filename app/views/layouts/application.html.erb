<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <script src="https://kit.fontawesome.com/b0cb6db527.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-light bg-primary">
      <%= link_to 'Restaurants', restaurants_path, class: "navbar-brand text-light" %>
      <%= link_to 'Add a new restaurant', new_restaurant_path, class: "navbar-brand text-light" %>
    </nav>

    <%= yield %>
  </body>
</html>
